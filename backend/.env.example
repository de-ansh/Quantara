# Application
APP_NAME=Quantara
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql+asyncpg://quantara:quantara@localhost:5432/quantara
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.1

# SEC EDGAR
SEC_USER_AGENT=YourCompanyName admin@example.com

# Vector Database (Pinecone/Weaviate)
VECTOR_DB_TYPE=pinecone
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=quantara-research

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Background Tasks
ENABLE_BACKGROUND_TASKS=true
RISK_RECOMPUTE_SCHEDULE=0 2 * * *  # Daily at 2 AM
RESEARCH_REFRESH_SCHEDULE=0 3 * * *  # Daily at 3 AM
